{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "semi": [
        2,
        "never"
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "import/extensions": [
        "error",
        "always",
        {
          "js": "never",
          "vue": "never"
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "optionalDependencies": [
            "test/unit/index.js"
          ]
        }
      ],
      "global-require": 0,
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "func-names": 0,
      "no-alert": 0,
      "no-console": 0,
      "no-nested-ternary": 0,
      "no-undef": 1,
      "no-confusing-arrow": 0,
      "id-length": 0,
      "consistent-return": 0,
      "class-methods-use-this": 0,
      "max-len": [
        2,
        120,
        2,
        {
          "ignoreUrls": true,
          "ignoreComments": false
        }
      ],
      "new-cap": [
        2,
        {
          "capIsNewExceptions": [
            "express.Router",
            "Radium"
          ]
        }
      ],
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ],
      "no-underscore-dangle": [
        2,
        {
          "allow": [
            "__CLIENT__",
            "__SERVER__"
          ]
        }
      ],
      "no-plusplus": [
        0,
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-new": 0,
      "prefer-const": 0,
      "prefer-destructuring": [
        "error",
        {
          "VariableDeclarator": {
            "array": false,
            "object": true
          },
          "AssignmentExpression": {
            "array": false,
            "object": false
          }
        },
        {
          "enforceForRenamedProperties": false
        }
      ],
      "no-continue": 0,
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "no-var": 0,
      "one-var-declaration-per-line": "off",
      "one-var": "off"
    }
}